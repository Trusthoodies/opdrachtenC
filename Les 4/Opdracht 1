#include <stdio.h>
char tk(FILE *file);


int main()
{
    FILE *file;
    file = fopen("file.txt","r");
    if (file == NULL)
    {
        printf("kan de file niet vinden.");
        return 0;
    }
    tk(file);

    fclose(file);
    return 0;
}

char tk(FILE *file)
{
    char check;
    int counter = 0;
    FILE *nieuw;
    nieuw = fopen("niewefile.txt", "nieuwbestand");

    while ((check = fgetc(file)) != EOF)
    {
        counter++;

        check = check + 1;
        fputc(check, nieuw);

    }
    fclose(nieuw);
    printf("Er zitten %d letters in de file." , counter);

}
